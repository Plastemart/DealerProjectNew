
@{
    ViewBag.Title = "Reset Password";
    Layout = null;
}
@Html.AntiForgeryToken()
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>@ViewBag.Title</title>
    <link href="~/Template/css/bootstrap1.min.css" rel="stylesheet" />
    <link href="~/Template/Alert/jquery-confirm.min.css" rel="stylesheet" />
    <link href="~/Template/css/open-sans.css" rel="stylesheet" />
    <link href="~/Template/css/font-awesome-min.css" rel="stylesheet" />
    <style>
        body {
            font-family: "Open Sans";
        }

        .wrapper {
            width: 30%;
            margin: 50px auto;
            text-align: center;
        }

        .thank {
            width: 100%;
            background: #fff;
            box-shadow: 0 1px 2px #888;
            margin-top: 20px;
            border: 1px solid #ccc;
        }

        .top-head {
            background: #ffffff;
            text-align: center;
            padding: 20px 0;
            border-bottom: 2px solid #e32228;
        }

            .top-head i {
                width: 100px;
                height: 100px;
                text-align: center;
                line-height: 100px;
                background: #fff;
                font-size: 50px;
                border-radius: 50px;
                color: red;
            }

        .middle {
            padding: 20px;
        }

            .middle h1 {
                margin: 0;
                color: #000;
            }

            .middle p {
                margin: 0;
            }

        .order {
            background: #f2f2f2;
            margin: 20px 0;
            padding: 10px;
        }

            .order h5 {
                margin: 0;
                font-size: 20px;
            }

            .order b {
                color: #23b67f;
            }

        .floating-label {
            position: relative;
            margin-top: 25px;
        }

            .floating-label:nth-child(1) {
                position: relative;
                margin-top: 10px;
            }

        .floating-input, .floating-select {
            font-size: 14px;
            padding: 10px;
            display: block;
            width: 100%;
            height: 40px;
            background-color: transparent;
            border: none;
            border: 1px solid #ccc;
        }

            .floating-input:focus, .floating-select:focus {
                outline: none;
                border-bottom: 2px solid #e32228;
            }

        .floating-label label {
            color: #999;
            font-size: 14px;
            font-weight: normal;
            position: absolute;
            pointer-events: none;
            left: 10px;
            top: 10px;
            transition: 0.2s ease all;
            -moz-transition: 0.2s ease all;
            -webkit-transition: 0.2s ease all;
        }

        .floating-input:focus ~ label, .floating-input:not(:placeholder-shown) ~ label {
            top: -20px;
            font-size: 14px;
            color: #000;
            left: 0;
            font-weight: 600;
        }

        .floating-select:focus ~ label, .floating-select:not([value=""]):valid ~ label {
            top: -18px;
            font-size: 14px;
            color: #5264AE;
        }

        .floating-input:focus ~ .bar:before, .floating-input:focus ~ .bar:after, .floating-select:focus ~ .bar:before, .floating-select:focus ~ .bar:after {
            width: 50%;
        }

        *, *:before, *:after {
            -webkit-box-sizing: border-box;
            -moz-box-sizing: border-box;
            box-sizing: border-box;
        }

        .floating-textarea {
            min-height: 30px;
            max-height: 260px;
            overflow: hidden;
            overflow-x: hidden;
        }

        .highlight {
            position: absolute;
            height: 50%;
            width: 100%;
            top: 15%;
            left: 0;
            pointer-events: none;
            opacity: 0.5;
        }

        .floating-input:focus ~ .highlight, .floating-select:focus ~ .highlight {
            -webkit-animation: inputHighlighter 0.3s ease;
            -moz-animation: inputHighlighter 0.3s ease;
            animation: inputHighlighter 0.3s ease;
        }

        @@-webkit-keyframes inputHighlighter {
            from {
                background: #5264AE;
            }

            to {
                width: 0;
                background: transparent;
            }
        }

        @@-moz-keyframes inputHighlighter {
            from {
                background: #5264AE;
            }

            to {
                width: 0;
                background: transparent;
            }
        }

        @@keyframes inputHighlighter {
            from {
                background: #5264AE;
            }

            to {
                width: 0;
                background: transparent;
            }
        }


        .toggle-password {
            position: absolute;
            top: 10px;
            right: 10px;
            cursor: pointer;
        }

        .submit {
            background: #e32228;
            width: 100%;
            min-height: 40px;
            border: #e32228;
            color: #fff;
            font-size: 16px;
            font-weight: 600;
        }

        .update i {
            font-size: 80px;
            color: #23b67f;
        }
    </style>
</head>
<body>
    <div class="wrapper">
        <div class="thank">
            <div class="top-head">
                <img src="~/Template/images/logo.png" />
            </div>
            <div class="middle">
                <div class="password">
                    <div class="floating-label">
                        <input class="floating-input" id="txtpassword" type="password" placeholder=" " />
                        <span class="highlight"></span>
                        <label>New Password</label>
                        <i toggle="#txtpassword" class="fa fa-fw fa-eye field-icon toggle-password"></i>
                    </div>
                    <div class="floating-label">
                        <input class="floating-input" type="password" id="txtConfirmpassword" placeholder=" " />
                        <span class="highlight"></span>
                        <label>Confirm Password</label>
                        <i toggle="#txtConfirmpassword" class="fa fa-fw fa-eye field-icon toggle-password"></i>
                    </div>
                    <br />
                    <input type="submit" value="Submit" class="submit" onclick="ResetPassword()" />
                </div>
                <div id="divSuccess" class="update" style="display: none;">
                    <i class="fa fa-check-circle-o"></i>
                    <h1>Password Updated!</h1>
                    <p>Your Password has been changed successfully. <br /> Click here to <a href="@Url.Action("Index", "Home")">Login</a>.</p>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
<script src="~/Scripts/jquery-3.1.0.min.js"></script>
<script src="~/Template/Alert/jquery-confirm.min.js"></script>
<script>
    $(".toggle-password").click(function () {
        $(this).toggleClass("fa-eye fa-eye-slash");
        var input = $($(this).attr("toggle"));
        if (input.attr("type") == "password") {
            input.attr("type", "text");
        } else {
            input.attr("type", "password");
        }
    });
    function alert(msg) {
        $.confirm({
            title: 'Alert!',
            content: msg,
            icon: 'fa fa-warning',
            closeIcon: false,
            animation: 'scale',
            type: 'red',
            buttons: {
                deleteUser: {
                    text: 'Ok',
                    action: function () {
                        //$.alert('Deleted the user!');
                    }
                }
            }
        });
    }

    function ResetPassword() {
        try {
            if ($("#txtpassword").val() == "") {
                alert("Password Required !! ")
                return
            }
            if ($("#txtConfirmpassword").val() == "") {
                alert("Confirm Password !! ")
                return
            }
            if ($("#txtpassword").val() != $("#txtConfirmpassword").val()) {
                alert("Password and Confirm Password Mismatch !! ")
                return
            }
            var data = { 'Password': $("#txtpassword").val() };
            var dataWithAntiforgeryToken = $.extend(data, { '__RequestVerificationToken': $("input[name='__RequestVerificationToken']").val() });
            $.ajax({
                url: '@Url.Action("ResetPasswordSubmit", "Home")',
                type: 'POST',
                dataType: 'json',
                async: true,
                data: dataWithAntiforgeryToken,
                success: function (Response) {
                    if (Response.StatusId == "1") {
                        $("#divSuccess").show();
                    }
                    else {
                        alert(Response.Status);

                    }
                },
                error: function (xhr) {
                    alert("Data size is too large!");
                }
            });
        }
        catch (e) {
            alert("Data size is too large!");
        }
    }
</script>
