            placeholder: "To Date",
            displayFormat: "dd/MMM/yyyy"
        });


        $("#ddlCustomer").dxSelectBox({
            height: 30,
            dataSource: new DevExpress.data.ArrayStore({
                data: CustomerList,
                key: "PartyID"
